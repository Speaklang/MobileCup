<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecup.com.fiap.mobilecup.SituacaoOnibusActivity"
    android:background="@color/white">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />


    <Button
        android:id="@+id/get_flights_menu_from_to_btn_use_gps"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/novo_btn_orange"
        android:paddingLeft="@dimen/margin_between_elements_small"
        android:paddingRight="@dimen/margin_between_elements_small"
        android:text="Noticias"
        android:textColor="@color/white"
        android:textSize="@dimen/label_size_small"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtQtdAlunos"
        android:layout_above="@+id/get_flights_menu_from_to_btn_use_gps"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Qunatidade de lugares disponiveis no onibus:"
        android:id="@+id/lblInfo"
        android:layout_above="@+id/txtQtdAlunos"
        android:layout_marginBottom="88dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="20dp" />


</RelativeLayout>
